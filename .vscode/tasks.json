{
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build",
            "args": ["run", "build-all"],
            "isBuildCommand": true
        },
        {
            "taskName": "build-lib",
            "args": ["run", "build-lib"]
        },
        {
            "taskName": "build-test",
            "args": ["run", "build-test"]
        },
        {
            "taskName": "test",
            "args": ["run", "test"],
            "isTestCommand": true
        },
        {
            "taskName": "watch-all",
            "args": [
                "run",
                "watch-all"
            ],
            "isWatching": true
        },
        {
            "taskName": "watch-lib",
            "args": [
                "run",
                "watch-server"
            ],
            "isWatching": true
        },
        {
            "taskName": "watch-test",
            "args": [
                "run",
                "watch-client"
            ],
            "isWatching": true
        }
    ]
}